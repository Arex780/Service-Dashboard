@model WebArchive.Models.Project

@{
    ViewData["Title"] = "Delete project";
}

<div class="container">
    <main role="main" class="pb-3 w-100">
    <div class="text-left">
        <h1 class="display-4">Delete project "@Model.Name"</h1>
    </div>

    <h3>Are you sure you want to delete this project?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Project name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            @if (Model.ShortDesc != null)
            {
                <dt class="col-sm-2">
                    Description:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShortDesc)
                </dd>
            }
            @if (Model.WebAdress != null)
            {
                <dt class="col-sm-2">
                    Website:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WebAdress)
                </dd>
            }
            @if (Model.Repository != null)
            {
                <dt class="col-sm-2">
                    Repository page:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Repository)
                </dd>
            }
        </dl>

        <form asp-action="Delete" asp-controller="Project" asp-route-id="@Model.Id">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>

<p></p>
<div>
    <a rel="nofollow" class="external text" href="/Project/@Model.Keygen">Back to Project Page</a>
</div>
    </main>
</div>